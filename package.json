{
  "name": "household-management",
  "version": "0.1.0",
  "private": true,
  "description": "Household Management System - Budget planning and generator maintenance tracking",
  "author": "rpabo",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules",
    "db:generate": "pnpm --filter @hms/database db:generate",
    "db:migrate": "pnpm --filter @hms/database db:migrate",
    "db:studio": "pnpm --filter @hms/database db:studio"
  },
  "devDependencies": {
    "rimraf": "^6.0.0",
    "turbo": "^2.6.0",
    "typescript": "^5.9.0"
  },
  "pnpm": {
    "overrides": {
      "@rollup/plugin-replace": "^6.0.0",
      "magic-string": "^0.30.0",
      "source-map": "^0.7.6",
      "esbuild": "^0.25.0"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.11.0"
}
